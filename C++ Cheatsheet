PART ii

#include <iostream>
using namespace std;

int main() {
int M(1),N(4);double G(0.0), T(0.0), Average(0.0);

while(M<=N){
  cout << "enter the amount of food for person" << M << ":" <<"$";
 cin >> G;
  T=T+G;
  M=M+1;
}
  Average=T/N;
  cout << "everyone's average price is" << Average << "$" << endl;
           
return 0;
}
  
